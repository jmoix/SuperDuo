<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingStart="16dp"
    android:layout_marginLeft="@dimen/list_horizonal_matgin"
    android:layout_marginStart="2dp"
    android:layout_marginRight="@dimen/list_horizonal_matgin"
    android:layout_marginEnd="2dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:paddingEnd="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/scores_list"
            android:divider="@android:color/transparent"
            android:dividerHeight="15sp"
            />

    <android.support.v7.widget.CardView
        android:id="@+id/scores_list_empty"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/empty_text"
            android:text="@string/scores_list_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            />
    </android.support.v7.widget.CardView>

</FrameLayout>
